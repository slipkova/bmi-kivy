BoxLayout:
    orientation:'vertical'
    MDToolbar:
        title: 'Bottom navigation'
        md_bg_color: .8, .2, .2, 1
        specific_text_color: 1, 1, 1, 1
    MDBottomNavigation:
        id: navigation
        panel_color: .8, .8, .4, 1
        MDBottomNavigationItem:
            name: 'screen 0'
            text: 'Hlavní'
            icon: 'home'
            MainScreen:
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'BMI'
            icon: 'text'
            TextScreen:
        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Seznam'
            icon: 'card-bulleted'
            FormScreen:
        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Tabulka'
            icon: 'grid'
            TableScreen:

<TextScreen>:
    name: 'textscreen'
    FloatLayout:
        canvas:
            Color:
                rgba: 0.65, 0.35, 0, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0, 25, 0, 0]
        MDLabel:
            id: label
            text: 'Hi I am  label!'
            size_hint: (.5, .1)
            pos_hint: {'center_x': .5, 'center_y': .9}
            font_style: 'H5'
            canvas.before:
                Color:
                    rgba: 0, .5, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: 0.1
            pos_hint: {'center_x': .5}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgba: .5, .5, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                text: "Váha"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
            MDTextField:
                id: vaha
                mode: 'fill'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: .8
            size_hint_y: 0.1
            pos_hint: {'center_x': .5, 'center_y': .4}
            height: self.minimum_height
            spacing: 10
            canvas.before:
                Color:
                    rgba: .5, .5, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            MDLabel:
                text: "Výška"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
            MDTextField:
                id: vyska
                mode: 'fill'

        MDRaisedButton:
            text: "Vypočítej"
            md_bg_color: 0.4, 0.4, 0.4, 1
            pos_hint: {'center_x': .65, 'center_y': .9}
            on_press:
                root.ids.label.text = str(round(int(root.ids.vaha.text) / ((int(root.ids.vyska.text)/100) ** 2), 2))
<FormScreen>
    name:'formscreen'
    PageLayout:
        MDLabel:
            canvas.before:
                Color:
                    rgba: 0, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            text:'Form Screen'
            font_style: 'H2'
            halign: 'center'
            pos_hint : {'center_y':0.85}
<TableScreen>:
    name:'tablescreen'
    PageLayout:
        MDLabel:
            text:'Table Screen'
            font_style: 'H2'
            halign: 'center'
            pos_hint: {'center_y':0.75}
<MainScreen>:
    name : 'mainscreen'
    PageLayout:
        MDLabel:
            text:'Main Screen'
            font_style : 'H2'
            halign : 'center'
            pos_hint : {'center_y':0.7}
